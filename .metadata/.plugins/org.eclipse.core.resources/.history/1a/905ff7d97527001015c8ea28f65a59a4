/* USER CODE BEGIN PTD */
enum CANMessageID_t
{
	MAIN_CONTROLLER,
	USER_INTERFACE,
	THROTTLE_BY_WIRE,
	BRAKE_BY_WIRE,
	LOWER_STEER_BY_WIRE,
	UPPER_STEER_BY_WIRE
};
/* USER CODE END PTD */

/* Private define ------------------------------------------------------------*/
/* USER CODE BEGIN PD */

#define BUFFER_SIZE 256

/* USER CODE END PD */

/* Private macro -------------------------------------------------------------*/
/* USER CODE BEGIN PM */

/* USER CODE END PM */

/* Private variables ---------------------------------------------------------*/

ETH_TxPacketConfig TxConfig;
ETH_DMADescTypeDef  DMARxDscrTab[ETH_RX_DESC_CNT]; /* Ethernet Rx DMA Descriptors */
ETH_DMADescTypeDef  DMATxDscrTab[ETH_TX_DESC_CNT]; /* Ethernet Tx DMA Descriptors */

CAN_HandleTypeDef hcan1;

ETH_HandleTypeDef heth;

I2C_HandleTypeDef hi2c1;

UART_HandleTypeDef huart2;
UART_HandleTypeDef huart3;
UART_HandleTypeDef huart6;

/* USER CODE BEGIN PV */

/* Necessary CAN variables */
uint32_t CANRxMailbox;
uint32_t CANTxMailbox;
uint8_t CANRxData[8];
uint8_t CANTxData[8];
CAN_RxHeaderTypeDef RxHeader;
CAN_TxHeaderTypeDef TxHeader;

/* uart3 buffer */

char uartDataBuffer[BUFFER_SIZE];

/*uart3 messages */

const char* UIMsg = "Packet received from User Interface.\n\r";
const char* TBWMsg = "Packet received from Throttle by Wire.\n\r";
const char* BBWMsg = "Packet received from Brake by Wire.\n\r";
const char* LSWBMsg = "Packet received from Lower Steer by Wire.\n\r";
const char* USBWMsg = "Packet received from Upper Steer by Wire.\n\r";
const char* ErrorMsg = "Error: packet received from unknown sender.\n\r";


/* USER CODE END PV */

